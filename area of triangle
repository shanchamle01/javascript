    <script>
        
        const base = 8;      
        const height = 4;    
        const triangleArea = (base * height) / 2;

        document.write("Base: " + base + "<br>");
        document.write("Height: " + height + "<br>");
        document.write("Area of Triangle: " + triangleArea + "<br>");
    </script>
